  }
      
    
  
    
    
  public void setMoney(){
    Money.setText(money);
  }
  
  
  WritePageBtn.setOnClickListener(new View.OnClickListener(){
    public void onClick(View view){
      Intent intent = new Intent(this, WritePage.class);
      startActivity(intent);
    }
  });
  
