public class LetterPage extends AppCompatActivity{
  
  Random rnd;
  
  protected void onCreate(Bundle savedInstanceState){
    super.onCereate(savedInsranceState);
    setContentView(R.layout.activity_letter);
    
    rnd=new Random();
    

    int num=rnd.nextInt(cursor.getCount())
  
    cursor.getPosition(num);
  
  
    cursor.getText(1);   //date
    cursor.getText(2);   //emotion
    cursor.getText(3);   //title
    cursor.getText(4);   //diary
  }
}
